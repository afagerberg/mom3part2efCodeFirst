@model dt191gMom3Part2.Models.Artist

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Artist</h2>


<div class="edit">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArtistId" />
            <div class="form-group">
                <label asp-for="ArtistName" class="control-label"></label>
                <input asp-for="ArtistName" class="form-control" />
                <span asp-validation-for="ArtistName" class="formMsg"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara ändringar" class="btn btn-primary" />
            </div>
        </form>
</div>

<div class="backto">
     <a asp-action="Index" asp-route-id="@Model?.ArtistId">&lt; Till artisten</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
