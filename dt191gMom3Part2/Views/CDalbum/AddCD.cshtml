@model dt191gMom3Part2.Models.CDalbum

@{
    ViewData["Title"] = "Lägg till CD album";
}

<h2>Lägg till</h2>

<h3>CDalbum</h3>

    <div class="add">
        <form asp-action="AddCD">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CdName" class="control-label"></label><br>
                <span asp-validation-for="CdName" class="formMsg"></span>
                <input asp-for="CdName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ReleaseYear" class="control-label"></label><br>
                <span asp-validation-for="ReleaseYear" class="formMsg"></span>
                <input asp-for="ReleaseYear" value="1900" class="form-control" /> 
            </div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label>
                <select asp-for="ArtistId" class ="form-control" asp-items="ViewBag.ArtistId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Lägg till CD" class="btn btn-primary" />
            </div>
        </form>
    </div>


<div class="backto">
   @Html.ActionLink("< Tillbaka till samling", "Index", "Home")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
